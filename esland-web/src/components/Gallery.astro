---
import 'photoswipe/style.css';
---

<section id="gallery" class="grid grid-cols-3">
    {
        Array.from({ length: 9 }).map((_, i) => {
            return (
                <a href={`/public/images/gallery/Velada/img-${i+1}.webp`} target="_blank" data-pswp-width="1152" data-pswp-height="767">
                    <img src={`/public/images/gallery/Velada/img-${i+1}.webp`} alt="Test" loading="lazy"></img>
                </a>
            )
        })
    }
</section>

<script>
    

    import PhotoSwipeLightbox from 'photoswipe/lightbox';

    const lightbox = new PhotoSwipeLightbox({
        gallery: '#gallery',
        children: 'a',
        showHideAnimationType: 'zoom',
        pswpModule: () => import('photoswipe')
    });
    lightbox.init();
</script>