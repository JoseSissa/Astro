---
import { EXPERIENCE_JOBS } from '../constants/experiencia'
---
<div>
    <ol>
        {
            EXPERIENCE_JOBS.map((job, index) => {
                return(
                    <li class="mb-12">
                        <div>
                            <header class="mb-2 text-xs font-light">{job.fecha}</header>
                            <div>
                                <h3 class="mb-2 font-bold">{job.cargo} en {job.empresa}</h3>
                                <p class="mb-3 leading-5 font-light">{job.explicacion_cargo}</p>
                                <ul class="flex flex-wrap">
                                    {
                                        job.tecnologias.map((tecnologia, i) => (
                                            <li class="mr-2 mb-2 py-2 px-3 rounded-lg text-xs font-bold bg-[#ffd430] text-[#0e1013]">{tecnologia}</li>
                                        ))
                                    }
                                </ul>
                            </div>
                        </div>
                    </li>
                )
            })
        }
    </ol>
</div>